<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Custom Error Pages -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" subStatusCode="-1" />
      <remove statusCode="500" subStatusCode="-1" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
      <error statusCode="500" path="/500.html" responseMode="ExecuteURL" />
    </httpErrors>

    <!-- URL Rewrite Rules -->
    <rewrite>
      <rules>
        <!-- Force HTTPS -->
        <rule name="Force HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Redirect www to non-www -->
        <rule name="Remove WWW" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^www\.(.+)$" />
          </conditions>
          <action type="Redirect" url="https://{C:1}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Block admin directory -->
        <rule name="Block Admin" stopProcessing="true">
          <match url="^admin(.*)" />
          <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access Denied" />
        </rule>

        <!-- Redirect removed Eluxcart page -->
        <rule name="Redirect Eluxcart" stopProcessing="true">
          <match url="^cgtmse-eluxcart(\.html)?$" />
          <action type="Redirect" url="/success-stories.html" redirectType="Permanent" />
        </rule>

        <!-- Redirect privacy -->
        <rule name="Redirect Privacy" stopProcessing="true">
          <match url="^privacy/?$" />
          <action type="Redirect" url="/privacy-policy.html" redirectType="Permanent" />
        </rule>

        <!-- Redirect consultation -->
        <rule name="Redirect Consultation" stopProcessing="true">
          <match url="^consultation/?$" />
          <action type="Redirect" url="/contact.html" redirectType="Permanent" />
        </rule>

        <!-- Redirect index.html to root -->
        <rule name="Redirect Index" stopProcessing="true">
          <match url="^index(\.html?|\.htm)?$" ignoreCase="true" />
          <action type="Redirect" url="/" redirectType="Permanent" />
        </rule>

        <!-- Redirect book-consultation -->
        <rule name="Redirect Book Consultation" stopProcessing="true">
          <match url="^book-consultation(\.html)?$" ignoreCase="true" />
          <action type="Redirect" url="/" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>

    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
      </customHeaders>
    </httpProtocol>

    <!-- Disable directory browsing -->
    <directoryBrowse enabled="false" />

    <!-- MIME Types for modern web -->
    <staticContent>
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>

  <!-- Per-file cache headers for favicon assets -->
  <location path="img/favicon.ico">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="public, max-age=3600, must-revalidate" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
  <location path="img/favicon-32.png">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="public, max-age=3600, must-revalidate" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
  <location path="img/favicon.png">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="public, max-age=3600, must-revalidate" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
  <location path="img/apple-touch-icon.png">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="public, max-age=3600, must-revalidate" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
</configuration>
